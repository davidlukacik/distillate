# Zotero — get these from https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your_api_key_here
ZOTERO_USER_ID=your_numeric_user_id_here

# If your Zotero storage utilizes a WebDAV server... TK
# ZOTERO_WEBDAV_URL=<the exact WebDAV folder URL that contains the .zip/.prop files>
# ZOTERO_WEBDAV_USERNAME=<your WebDAV username>
# ZOTERO_WEBDAV_PASSWORD=<your WebDAV app password>

# reMarkable — populated by running: distillate --register
REMARKABLE_DEVICE_TOKEN=

# reMarkable folder names (created automatically)
RM_FOLDER_PAPERS=Distillate
RM_FOLDER_INBOX=Distillate/Inbox
RM_FOLDER_READ=Distillate/Read
RM_FOLDER_SAVED=Distillate/Saved

# Zotero tags for workflow status
ZOTERO_TAG_INBOX=inbox
ZOTERO_TAG_READ=read

# Zotero storage — set to false to delete PDFs from Zotero after
# uploading to reMarkable (saves Zotero storage, PDF stays on tablet + locally)
KEEP_ZOTERO_PDF=true

# Highlight back-propagation — set to false to disable writing highlights
# back to Zotero as annotations
SYNC_HIGHLIGHTS=true

# Output — choose one:
# Option 1: Obsidian vault (rich integration with wiki-links, Dataview, stats)
OBSIDIAN_VAULT_PATH=
OBSIDIAN_PAPERS_FOLDER=Distillate
OBSIDIAN_VAULT_NAME=
# Option 2: Plain folder (just markdown notes + annotated PDFs)
# OUTPUT_PATH=

# Anthropic API — for AI-generated reading log summaries (leave empty to use fallback)
# ANTHROPIC_API_KEY=

# Resend — for weekly email digest (leave empty to disable)
# Get API key from https://resend.com/api-keys
# RESEND_API_KEY=
# DIGEST_FROM=onboarding@resend.dev
# DIGEST_TO=you@example.com

# State sync — for GitHub Actions email features
# Create a private gist with: gh gist create state.json
# STATE_GIST_ID=
# GH_GIST_TOKEN= (GitHub PAT with gist scope, for GH Actions to push picks)

# Script settings
HTTP_TIMEOUT=30
LOG_LEVEL=INFO
